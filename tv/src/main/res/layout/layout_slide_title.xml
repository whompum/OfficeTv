<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <!--
        NOTE
        The use of android:letterSpacing
        will apply a spacing at the start of the
        first character. This View tries to achieve
        a visual effect where all its children are
        left justified. Due to the inconsistency
        of the letterSpacings, i use negative margins
        to achieve the desired Visual effect.
    -->


    <com.californiadreamshostel.officetv.Views.RTV
        app:FONT="MEDIUM"
        android:id="@id/id_slide_title_cali"
        android:textSize="22dp"
        android:textColor="@android:color/white"
        android:letterSpacing=".75"
        android:layout_marginStart="-6dp"
        tools:text="@string/string_slide_title_cali"
        android:background="@color/color_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.californiadreamshostel.officetv.Views.RTV
        app:FONT="MEDIUM"
        android:id="@id/id_slide_title_dreams"
        android:textSize="22dp"
        android:letterSpacing=".75"
        android:layout_marginStart="-6dp"
        android:textColor="@android:color/white"
        tools:text="@string/string_slide_title_dreams"
        android:background="@color/color_special"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.californiadreamshostel.officetv.Views.RTV
        android:id="@id/id_slide_title_page"
        android:textSize="@dimen/size_text_large"
        android:textColor="@android:color/white"
        android:letterSpacing=".25"
        android:background="@color/color_special"
        android:text="ALOHA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</merge>